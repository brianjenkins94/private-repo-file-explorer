	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"runtimeArgs": [
				"-r",
				"ts-node/register"
			],
			"args": [
				"${workspaceFolder}/server.ts"
			],
			"skipFiles": [
				"${workspaceRoot}/node_modules/**/*.js",
				"<node_internals>/**/*.js"
			],
			"console": "integratedTerminal"
		}
	]
}
